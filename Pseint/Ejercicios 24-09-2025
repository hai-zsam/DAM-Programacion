# Ejercicio 6 de Pseudocódigo, Tema 1 en Pseint

Algoritmo Ejercicio6
	Escribir "Introduce el primer dígito a calcular";
	Leer a;
	Escribir "Introduce el segundo dígito a calcular";
	Leer b;

	c<-a+b
	Escribir "El resultado de la suma es " c;
	c<-a-b;
	Escribir "El resultado de la resta es " c;
	c<-a*b
	Escribir "El producto de " a " y " b " es " c
	c<-a/b
	Escribir "La división entre " a " y " b " da " c
FinAlgoritmo

# Versión alternativa del Ejercicio 6 en Pseint

Algoritmo Ejercicio6Alt
	Escribir "Introduce el primer dígito a calcular";
	Leer a;
	Escribir "Introduce el segundo dígito a calcular";
	Leer b;

	suma<-a+b
	resta<-a-b
	producto<-a*b
	division<-a/b
	
	Escribir "La suma de " a " + " b " da " suma;
	Escribir "La resta de " a " + " b " da " resta;
	Escribir "El producto de " a " + " b " da " producto;
	Escribir "La división de " a " + " b " da " division;
FinAlgoritmo

# Ejercicio 9, programa incorrecto pero funcional, Parte 1

Algoritmo Ejercicio9
	Escribir "Introduce una cantidad de segundos"
	Leer sec
	min<-sec/60
	hour<-min/60
	Escribir sec " segundos son " min " minutos y " hour " horas." 
FinAlgoritmo

# Ejercicio 9 corregido, Parte 1

Algoritmo Ejercicio9
	Escribir "Introduce una cantidad de segundos"
	Leer totalSegundos
	
	restoHoras = (totalSegundos%3600)
	horas = (totalSegundos - restoHoras)/3600
	
	segundos = restoHoras % 60
	minutos = (restoHoras - segundos)/60
	
	Escribir "horas: ", horas
	Escribir "minutos ", minutos
	Escribir "segundos ", segundos
	
	Escribir "La cantidad de horas, minutos y segundos es " horasRestante "h " minutos " min y " secRestante " segundos."
FinAlgoritmo

# Ejercicio 7, Parte 1

Algoritmo Ejercicio7Parte1
	Escribir "Introduce tu nombre"
	Leer nombre
	Escribir "Introduce horas trabajadas"
	Leer horasTrabajadas
	Escribir "Introduce tu salario por hora"
	Leer salarioHora
	salarioTotal<-horasTrabajadas*salarioHora
	Escribir "El salario de " nombre " es de " salarioTotal " euros."
FinAlgoritmo

# Ejercicio 8, Parte 1

Algoritmo Ejercicio8Parte1
	Escribir "Introduce la cantidad de alumnos niños."
	Leer niños
	Escribir "Introduce la cantidad de alumnas niñas."
	Leer niñas
	totalAlumnos<- niños+niñas
	porcentajeNiños<- (niños*100)/totalAlumnos
	porcentajeNiñas<- (niñas*100)/totalAlumnos
	Escribir "De " totalAlumnos " alumnos en el curso, hay un " porcentajeNiños "% de niños y un " porcentajeNiñas "% de niñas."
FinAlgoritmo

# Ejercicio 10, Parte 1

Algoritmo Ejercicio10Parte1
	Escribir "Introduce una cantidad de segundos."
	Leer segundos
	residuo<- segundos%60
	segundosRestantes<-60-residuo
	Escribir "Los segundos restantes hasta otro minuto son " segundosRestantes
FinAlgoritmo

