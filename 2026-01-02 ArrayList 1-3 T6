        // Ejercicio 3- Tema 6 ArrayList.pdf
        Random aleatorio = new Random();
        ArrayList<Carta> baraja = new ArrayList<>();
        ArrayList<Carta> mano = new ArrayList<>();
        int carta;
        // Bucle para crear las cartas de la Baraja
        for (int i = 1; i < 12; i++) {
            baraja.add(new Carta(i, "Bastos"));         // Añadir clase(s) a la lista "Baraja"
            baraja.add(new Carta(i, "Copas"));
            baraja.add(new Carta(i, "Espadas"));
            baraja.add(new Carta(i, "Oros"));
        }

        for (int i = 0; i < 10; i++) {
            carta = aleatorio.nextInt(baraja.size());
            mano.add(baraja.get(carta));
            baraja.remove(carta);
        }

        for (int i = 0; i < mano.size(); i++) {
            for (int j = i + 1; j < mano.size(); j++) {
                int temp = mano.get(i).getPalo().compareTo(mano.get(j).getPalo());
                if (temp > 0 || (temp == 0 && mano.get(i).getNum() > (mano.get(j).getNum()))) {
                 Carta aux = mano.get(i);
                 mano.set(i, mano.get(j));
                 mano.set(j, aux);
                }
            }
        }
