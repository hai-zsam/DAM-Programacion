    public static void eliminarContactos(ArrayList<Contacto> contactos) {
        String nombre;
        String apellido;
        boolean encontrado = false;
        Scanner sc = new Scanner(System.in);
        System.out.println("Ingrese el nombre del contacto a eliminar");
        nombre = sc.nextLine();
        System.out.println("Ingrese el apellido del contacto a eliminar");
        apellido = sc.nextLine();

        for (int i = 0; i < contactos.size(); i++) {
            if (contactos.get(i).getNombre().equals(nombre) && contactos.get(i).getApellido().equals(apellido)) {
