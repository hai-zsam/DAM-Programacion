import java.util.Scanner;
public class Main {
    static void main(String[] args) {
        int x = 144;
        int y = 999;

        System.out.println(x + " " + y + " " + (x + y) + " " + (x - y) + " " + (x / y) + " " + (x * y));
    }
} */

/* Ejercicio 6

import java.util.Scanner;
public class Main {
    static void main(String[] args) {
        double euros;
        Scanner sc = new Scanner(System.in);
        System.out.println("Ingrese la cantidad de euros que pasar a dolar: ");
        euros = sc.nextDouble();

        System.out.println(euros*1.3);
    }
} */

/* Ejercicio 7

import java.util.Scanner;
public class Main {
    static void main(String[] args) {
        float dolares = 0.00f;
        Scanner sDolar = new Scanner(System.in);
        dolares = sDolar.nextFloat();

        System.out.println(dolares/1.3);
    }
} */

/* Ejercicio 8 */

import java.util.Scanner;
public class Main {
    static void main(String[] args) {
        double baseImponible;
        Scanner sc = new Scanner(System.in);
        baseImponible = sc.nextDouble();
        System.out.println(baseImponible + (baseImponible * 0.21));
    }
}
