/* import java.util.Scanner;

public class Main {
    public static int menu(){
        int opcao;

        Scanner sc = new Scanner(System.in);
        System.out.println("Escolha uma opção");
        System.out.println("[1] Quadrado        [2] Triângulo       [3] Círculo      [4] Saída");
        opcao = sc.nextInt();

        return opcao;
    }

    public static double areaQuadrado(){
        double lado, quadrado;

        Scanner sc = new Scanner(System.in);
        System.out.println("Insira o lado do quadrado:");
        lado = sc.nextDouble();

        quadrado = lado * lado * lado * lado;
        return quadrado;
    }

    public static double areaTriangulo(){
        double base, altura, triangulo;

        Scanner sc = new Scanner(System.in);
        System.out.println("Insira o altura do seu triângulo:");
        altura = sc.nextDouble();
        System.out.println("Insira o base do seu triângulo:");
        base = sc.nextDouble();

        triangulo = (base * altura) / 2;
        return triangulo;
    }

    public static double areaCirculo(){
        double radio, circulo;

        Scanner sc = new Scanner(System.in);
        System.out.printf("Insira o radio do seu circulo:");
        radio = sc.nextDouble();

        circulo = radio * radio * 3.14;
        return circulo;
    }

    public static void main(String[] args) {
        int opcao;
        do {
            opcao = menu();
            switch (opcao){
                case 1:
                    System.out.println("O resultado do seu cálculo é: " + areaQuadrado());
                    break;
                case 2:
                    System.out.println("O resultado do seu cálculo é: " + areaTriangulo());
                    break;
                case 3:
                    System.out.println("O resultado do seu cálculo é: " +  areaCirculo());
                    break;
            }
        } while (opcao != 4);
