        } else{
            numMayor = num2;
        } return numMayor;
    }

    public static void main(String[] args){
        int num1, num2, num3;
        Scanner sc = new Scanner(System.in);
        System.out.println("Introduce un número para comparar:");
        num1 = sc.nextInt();
        System.out.println("Introduce un segundo número para comparar:");
